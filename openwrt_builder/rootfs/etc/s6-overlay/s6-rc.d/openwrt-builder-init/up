#!/command/with-contenv sh
printf "\033[32mINFO\033[0m INIT step.\n" >&2
set -eu

# export env paths
set -a
. /etc/openwrt-builder/paths.env
set +a

env | while IFS='=' read -r k v; do
  case "$k" in
    OPENWRT_BUILDER_*_DIR)
      printf "FOR [%s] CREATE [%s]\n" "$k" "$v" >&2
      [ -n "$v" ] || continue
      mkdir -p -- "$v"
    ;;
  esac
done

# copy examples
# mkdir -p "$EXAMPLES_DIR"
